{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2015
  },
  "rules": {
    "indent": ["error", 2],
    "eqeqeq": ["error", "always"],
    "curly": "error",
    "default-case": "error",
    "no-var": "error",
    "no-multi-spaces": "error",
    "no-useless-constructor": "error",
    "prefer-const": "error",
    "prefer-rest-params": "error",
    "prefer-spread": "error",
    "no-console": "warn",
    "prefer-template": "warn",
    "quotes": [
      "warn",
      "single",
      {
        "avoidEscape": true
      }
    ]
  }
}
